{
  "name": "syntaxlab-crm",
  "private": true,
  "version": "1.2.11",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "dev": "vite --force",
    "prebuild": "node -e \"const fs=require('fs'); if(fs.existsSync('./dist')) fs.rmSync('./dist', {recursive:true, force:true});\"",
    "build": "npm run prebuild && vite build && node -e \"const fs=require('fs'); const pkg=require('./package.json'); fs.writeFileSync('./dist/version.json', JSON.stringify({version: pkg.version}));\" && node update-builder.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "node server.js",
    "electron": "electron .",
    "electron:build": "vite build && electron .",
    "dist": "npm run build && electron-builder",
    "clean": "rm -rf node_modules/.vite dist release"
  },
  "dependencies": {
    "@google/genai": "*",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6"
  },
  "build": {
    "appId": "com.syntaxlab.crm",
    "productName": "SyntaxLabCRM",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}